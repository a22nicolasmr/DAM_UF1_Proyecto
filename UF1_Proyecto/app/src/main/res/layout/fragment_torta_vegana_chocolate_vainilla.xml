                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_9"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_10"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_11"
                android:paddingStart="16dp"
                android:paddingBottom="8dp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_pasos_titulo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_paso_1"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
