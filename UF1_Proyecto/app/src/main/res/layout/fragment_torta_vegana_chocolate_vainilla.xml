            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredientes_titulo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_1"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_2"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_3"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_4"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_5"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torta_choc_veg_ingrediente_6"
                android:paddingStart="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
