<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/beige_crema" >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoGalletasFrutosSecos"
                    >

                    <ImageView
                        android:id="@+id/galletasFrutosSecos"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="140dp"
                        android:src="@drawable/galletasavena">
                    </ImageView>

                    <TextView
                        android:id="@+id/textoGalletasFrutosSecos"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="16dp"
                        android:text="@string/galletasAvena"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoTortaChoc"
                    >
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="150dp"
                        android:src="@drawable/tortavegchoc"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/tortaChoc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoMuffinsLimonAran"
                    >
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="150dp"
                        android:src="@drawable/muffinslimonarand"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/muffinsLimonAran" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoBarritaCacahuetesChoc"
                    >
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="170dp"
                        android:src="@drawable/barritascacahuete"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/barritasCacahuete" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoEnsaladaFrutas"
                    >

                    <ImageView
                        android:layout_width="222dp"
                        android:layout_height="211dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ensaladafrutas" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/ensalada" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoTartaLimonFrutos"
                    >
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="170dp"
                        android:src="@drawable/tartalimonfrutossecos"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/tartaLimonFrutos" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoMousseLimon"
                    >
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="170dp"
                        android:src="@drawable/mousselimonavena"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/mousseLimonAvena" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoBrowniesChocNueces"
                    >
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="170dp"
                        android:src="@drawable/brownieschocnueces"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/browniesChocNueces" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoGalletasLimonAvena"
                    >

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="222dp"
                        android:layout_height="133dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/galletasavenalimon" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/galletasLimonAvena" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoGalletasAvenaPasas"
                    >

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="222dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/galletasavenapasas" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/galletasAvenaPasas" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grupoMousseChocolateVegano"
                    android:layout_marginBottom="50dp"
                    >

                    <ImageView

                        android:layout_marginTop="20dp"
                        android:layout_width="220dp"
                        android:layout_height="112dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/moussechocvegano" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="222dp"
                        android:layout_height="18dp"
                        android:text="@string/mousseChocVeg" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>
