<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        android:src="@drawable/reposteriabuena"
        android:layout_margin="20dp"
        >
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionIngredientes"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        >

    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxAvena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avena"/>

            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxHuevos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/huevos"/>

            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxChoco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choco"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxMantequilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mantequilla"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxAzucar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/azucar"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxVainilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vainilla"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxFrutosSecos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frutosSecos"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxLeche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leche"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxMiel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miel"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxAceite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aceite"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>