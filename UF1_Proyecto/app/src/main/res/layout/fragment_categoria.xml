<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige_crema"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:src="@drawable/dulces2"
        android:layout_margin="20dp"
        >
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionCategorias"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        >

    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxAltoProteina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/altoProteina"/>

            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxBajoCalorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bajoCalorias"/>

            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxSinLactosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinLactosa"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxHorneado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horneado"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxVegano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vegano"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxSinGluten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinGluten"/>
            <CheckBox
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkBoxFrutas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frutas"/>
            <Button
                android:id="@+id/botonBuscarCategorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/botonBuscar"
                android:background="@color/marronGalleta"
                />
        </LinearLayout>
    </ScrollView>
    <androidx.fragment.app.FragmentContainerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentContainerView">
    </androidx.fragment.app.FragmentContainerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottomenu"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>